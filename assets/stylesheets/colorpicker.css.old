@media (max-width: 8000px) {
	html {
		font-size: 18px;
	}
}

@media (max-width: 1080px) {
	html {
		font-size: 16px;
	}
}

@media (max-width: 768px) {
	html {
		font-size: 14px;
	}
}

@media (max-width: 400px) {
	html {
		font-size: 16px;
	}
}

:root {
	--gradientSize: 10rem; 
	--squareSelectorSize: 1px;
	--colorPickerPadding: calc(var(--squareSelectorSize) * 2 + (var(--squareSelectorSize) / 2));
}

*:not(#colorPicker) {
    overflow: visible;
}

body {
	display: grid;
	grid-template-columns: 16rem 1fr;
}

#hInput {
	display: flex;
	flex-direction: column;
	justify-content: space-between;
	margin-top: 1.2rem;
}

#hInput div:first-of-type {
	display: flex;
	justify-content: space-between;
}

#hInput div div:first-child {
	text-align: left;
	margin-left: 0.1rem;
}

#hInput div div:last-child {
	text-align: right;
}

#hSlider {
	outline: none;
	overflow: visible;
	appearance: none;
	-webkit-appearance: none;
	-moz-appearance: none;
	width: 12rem;
	height: 0.75rem;
	border: 0.15rem solid #fff;
	border-radius: 1rem;
	background: linear-gradient(90deg, #ff0000 0%, #ffff00 17%, #00ff00 33%, #00ffff 50%, #0000ff 67%, #ff00ff 83%, #ff0000 100%);
    cursor: grab;
    cursor: -moz-grab;
    cursor: -webkit-grab;
}

#hSlider:active {
    cursor: grabbing;
    cursor: -moz-grabbing;
    cursor: -webkit-grabbing;
}

#hNumber {
    appearance: none;
}

/* chromium safari edge slider funny moving thingy in slider */

#hSlider::-webkit-slider-thumb {
	appearance: none;
	-webkit-appearance: none;
	height: 1.35rem;
	width: 0.4rem;
	background: #fff;
	border: 0;
	border-radius: 0.2rem;
	filter: drop-shadow(0 0 2px #000);
}

/* firefox slider funny moving thingy in slider */

#hSlider::-moz-range-thumb {
	appearance: none;
	-moz-appearance: none;
	height: 1.35rem;
	width: 0.4rem;
	background: #fff;
	border: 0;
	border-radius: 0.2rem;
	padding-bottom: 0.15rem;
	filter: drop-shadow(0 0 2px #000);
}

#rgb {
	display: flex;
}

.rgbInput {
	width: 3ch;
	color: #fff;
	background: #383838;
	margin-left: 0.2rem;
	border-radius: 0.2rem;
	font-size: 1rem;
}

#rInput {
	margin-left: 0;
}

#colorPickerWrapper {
	grid-area: 1 / 1 / 2 / 3;
	display: flex;
	flex-direction: column;
	align-items: center;
	width: 16rem;
	height: 100vh;
	background: #000;
}

#colorPicker {
	margin-top: 22vh;
}

#gradientsCenter {
	display: flex;
	justify-content: space-around;
}

#gradientsWrapper {
	width: calc(var(--gradientSize) + 1rem);
	height: calc(var(--gradientSize) + 1rem);
	display: flex;
	cursor: crosshair;
	justify-content: center;
	align-items: center;
}

#gradients {
	width: var(--gradientSize);
	height: var(--gradientSize);
	z-index: 5;
}

.gradientPart {
	width: var(--gradientSize);
	height: var(--gradientSize);
	position: absolute;
}

#squareSelector {
	position: relative;
	z-index: 6;
	left: 5rem;
	top: 5rem;
	width: var(--squareSelectorSize);
	height: var(--squareSelectorSize);
	background: #fff;
	border: #000 solid 1px;
}

#whiteGradient {
	background: linear-gradient(90deg, #fff 0%, rgba(0, 0, 0, 0) 100%);
	z-index: 1;
}

#blackGradient {
	background: linear-gradient(0deg, #000 0%, rgba(0, 0, 0, 0) 100%);
	z-index: 2;
}

#gradientColor {
	background: hsl(180, 50%, 50%);
}

#gradientsBorder {
	width: calc(var(--gradientSize) + 1.5rem);
	height: calc(var(--gradientSize) + 1.5rem);
	margin-top: calc(var(--squareSelectorSize) * 2 + (var(--squareSelectorSize) / 2));
	position: absolute;
	background: hsl(180, 50%, 50%);
	z-index: 0;
}