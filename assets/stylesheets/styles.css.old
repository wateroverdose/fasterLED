* {
    font-family: 'poppins', sans-serif, serif, monospace;
    -webkit-user-select: none;
    -moz-user-select: none;
    -ms-user-select: none;
    user-select: none;
    color: white;
    border: none;
    margin: 0;
    padding: 0;
    overflow: hidden;
}

@media (min-width: 1080px) {
    html {
        font-size: 18px;
    }
}

@media (max-width: 1080px) {
    html {
        font-size: 16px;
    }
}

@media (max-width: 768px) {
    html {
        font-size: 14px;
    }
}

@media (max-width: 400px) {
    html {
        font-size: 16px;
    }
}

#ieBlocker {
    width: 100%;
    height: 100%;
    position: fixed;
    display: none;
    align-items: center;
    background: #000;
    color: #fff;
    z-index: 999;
    text-align: center;
    overflow: hidden;
}

#ieBlocker div {
    width: 100%;
    margin-bottom: 4rem;
    display: flex;
    flex-direction: column;
}

#ieBlocker h1 {
    font-size: 6rem;
}

#ieBlocker a {
    color: #fff;
    text-decoration: underline;
    cursor: pointer;
}

body {
    background: #383838;
}

main {
	grid-area: 1 / 2 / 2 / 2;
}

#announcement {
    display: none;
    position: fixed;
    width: 15rem;
    bottom: 8vh;
    right: 2.8vw;
    background: #ff0000;
    padding: 1rem;
    word-wrap: break-word;
    margin-right: 5.3%;
}

#announcement div {
    display: flex;
    justify-content: space-between;
    margin-bottom: 1rem;
}

#announcement  img {
    width: 2rem;
    cursor: pointer;
}

input:not([type="checkbox"]):not(.rgbInput) {
    overflow: auto;
    border-radius: 0.2rem;
	color: #000;
	outline: none;
	width: 6rem;
}

input:not([type="checkbox"]):not(.ignoreInputAnim) {
    transition: width 0.09s cubic-bezier(0.175, 0.885, 0.32, 1.275);
}

input:not([type="checkbox"]):focus {
	outline: rgb(0, 110, 255) dashed 0.15rem;
}

input:not([type="checkbox"]):not(.ignoreInputAnim):focus {
    width: 8rem;
    transition: width 0.09s cubic-bezier(0.175, 0.885, 0.32, 1.275);
}

input[type="number"]:not(.ignoreInputAnim) {
    appearance: textfield;
}

input[type="number"]:not(.ignoreInputAnim) {
    appearance: auto;
}

input[type="checkbox"] {
    width: 1rem;
    height: 1rem;
}

button {
    cursor: pointer;
}

button:not(.ignoreInputAnim):focus {
    width: 8rem;
    transition: width outline 0.085s cubic-bezier(0.175, 0.885, 0.32, 1.275);
    border: 1px solid #000;
}

h1 {
    overflow: hidden;
    text-align: center;
    font-weight: 650;
    font-size: 2.25rem;
}

.inputHeader {
    text-align: center;
}

#settings {
    width: 100%;
    text-align: center;
}

#isRectangleWrapper div div{
    display: flex;
    align-items: center;
    justify-content: center;
}

#isRectangleWrapper div div label {
    margin-left: 0.25rem;
}

.ledInput, #submitButton {
    margin-top: 0.25rem;
}

#ledInput {
    width: 100%;
    display: flex;
    justify-content: center;
}

#ledInput input {
    color: #000;
}

#ledInput button {
    color: #000;
    width: 6rem;
    height: 1.5rem;
    line-height: 1rem;
    outline: 0.12rem solid rgb(255, 0, 0);
    background: white;
    padding: 0rem 0.3rem;
    font-size: 1rem;
    margin-left: 1rem;
}

#ledInput button:focus {
    outline: 0.12rem solid rgb(0, 153, 255);
}

#ledInput section:first-child {
    display: block;
}

#ledInput section:nth-child(2) {
    display: none;
}

#ledMatrixWrapper {
    width: 30rem;
    height: 30rem;
    background: #ff0000;
    margin: 2rem auto 0 auto;
    overflow: auto;
}

#ledContainer {
    overflow: scroll;
}

#ledMatrix {
    width: 100%;
    height: 100%;
    display: grid;
    grid-template-rows: repeat(3, 1fr);
    grid-template-columns: repeat(3, 1fr);
    grid-auto-flow: column;
    grid-column-gap: 5rem;
    grid-row-gap: 5rem;
    overflow: hidden;
}

.ledBox {
    background: #fff;
    color: black;
    text-align: center;
    font-size: 0.5rem;
    line-height: 2rem;
    width: 2rem;
    height: 2rem;
    margin: 0.6rem 0.6rem;
}

code {
    display: none;
    justify-content: center;
}

#codeFinalWrapper {
    background: #fff;
    display: flex;
    justify-content: center;
    height: 10rem;
    width: 25rem;
    border-radius: 0.5rem;
    -ms-overflow-style: none;
    /* IE and Edge */
    scrollbar-width: none;
    /* Firefox */
    overflow-y: scroll;
}

#codeFinalWrapper::-webkit-scrollbar {
    display: none;
}

#codeFinal {
    -webkit-user-select: text;
    -moz-user-select: text;
    -ms-user-select: text;
    user-select: text;
    font-size: 1.5rem;
    /* Firefox */
    /* Internet Explorer 10+ */
    white-space: pre;
    color: #000;
}

#copyCode {
    width: 25rem;
    height: 10rem;
    position: absolute;
}

#copyCodeBackground {
    cursor: grab;
    cursor: -moz-grab;
    cursor: -webkit-grab;
    z-index: 2;
    position: absolute;
    width: 100%;
    height: 100%;
    background: radial-gradient(circle, rgba(31, 31, 31, 0.75) 15%, rgba(98, 98, 98, 0.5) 100%);
    border-radius: 0.5rem;
}

#copyCodeMinimize {
    z-index: 4;
    position: absolute;
    cursor: pointer;
    left: 87.5%;
    top: 10%;
    width: 2rem;
}

#copyCodeTextWrapper {
    display: flex;
    justify-content: center;
    align-items: center;
    height: 100%;
}

#copyCodeText {
    font-size: 1.2rem;
    filter: drop-shadow(0px 0px 2px #000);
    z-index: 3;
}

#pickerCanvas input {
    color: #000;
}